---
import type { MenuItem } from '../types/types'

interface Props extends MenuItem {}

const {title, url} = Astro.props;


---

<li>
  <a href={url}>{title}</a>
</li>



<style>

li {
  list-style: none;
  padding: 0;
  margin: 0;
}

li a {
  font-size: 25px;
  display: block;
  padding: 25px 40px;
  color: rgb(29, 26, 5);
  text-decoration: none;
  transition: all 0.3s ease-in-out;
  display: flex;
  align-items: center;
}

li a:hover {
  color: orange;
  transform: scale(1.15);
}

img {
  width: 32px;
}


@media screen and (max-width: 600px) {
  li a {
    padding: 15px; 
  }
  img {
    width: 24px; 
  }
}


</style>